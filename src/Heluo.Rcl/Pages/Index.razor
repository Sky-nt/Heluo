@page "/"
@using Masa.Blazor.Presets
@using tyme.lunar
@using Heluo.Services.ChineseCalendar;
@inject IChineseCalendarService _chineseCalendarService;
<MContainer Class="yellow lighten-5" Fluid="true">
    <MRow NoGutters Class="d-flex justify-center align-center">
        <PBlockText Primary="@dayTitle" Class="titleText" />
    </MRow>
</MContainer>
<MContainer Fluid="true">
    <MRow Justify="JustifyTypes.Center" AlignContent="AlignContentTypes.Center" NoGutters>
        <MCol Cols="12" lg="2">
            <MCard Class="card-misc-reveal" Height="500" Outlined>
                <!-- 第一个卡片内容 -->
            </MCard>
        </MCol>
        <MCol Cols="12" lg="8">
            <MCard Class="card-misc-reveal" Height="500" Outlined>
                <!-- 第一个卡片内容 -->
            </MCard>
        </MCol>
        <MCol Cols="12" lg="2">
            <MCard Class="card-misc-reveal" Height="500" Outlined>
                <!-- 第二个卡片内容 -->
            </MCard>
        </MCol>
    </MRow>
</MContainer>
<style>
    .card-misc-reveal .m-card--reveal {
        bottom: 0;
        opacity: 1 !important;
        position: absolute;
        width: 100%;
    }
    .titleText {
        display: flex; /* 使用 Flexbox */
        justify-content: center; /* 水平居中 */
        align-items: center; /* 垂直居中 */
        font-size: 42px; /* 初号字体，标准大约为42px */
        font-weight: bold; /* 加粗 */
        height: 100%; /* 可根据需要调整高度 */
        text-align: center; /* 文本居中对齐 */
        line-height: 1.5; /* 调整行高，保证视觉效果 */
        color:darkgoldenrod
    }

</style>

@code {
    string dayTitle;
    LunarDay chineseCalendar;
    protected override void OnInitialized()
    {
        chineseCalendar = _chineseCalendarService.GetChineseCalendarDay(DateTime.Now);
        dayTitle = chineseCalendar.ToString().Replace("农历","");
    }
}
